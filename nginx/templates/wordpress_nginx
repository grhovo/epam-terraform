server {
        listen 80;
        listen [::]:80;

        root /var/www/wordpress;

        index index.php;

        server_name {{ ansible_host }};

        location / {
                try_files $uri $uri/ =404;
        }

        location ~ \.php$ {
        include snippets/fastcgi-php.conf;
        fastcgi_pass unix:/var/run/php/php7.4-fpm.sock;
        }
}
